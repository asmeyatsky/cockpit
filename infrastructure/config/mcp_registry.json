{
  "mcpServers": {
    "cloud-provider-service": {
      "command": "python",
      "args": ["-m", "infrastructure.mcp_servers.cloud_provider_server"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "LOG_LEVEL": "INFO"
      }
    },
    "infrastructure-resource-service": {
      "command": "python",
      "args": ["-m", "infrastructure.mcp_servers.resource_server"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "LOG_LEVEL": "INFO"
      }
    },
    "agent-service": {
      "command": "python",
      "args": ["-m", "infrastructure.mcp_servers.agent_server"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "LOG_LEVEL": "INFO",
        "CLAUDE_API_KEY": "${CLAUDE_API_KEY}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "GEMINI_API_KEY": "${GEMINI_API_KEY}"
      }
    },
    "cost-service": {
      "url": "https://cost.internal/mcp",
      "transport": "streamable-http"
    },
    "observability-service": {
      "url": "https://observability.internal/mcp",
      "transport": "streamable-http"
    },
    "iac-service": {
      "command": "python",
      "args": ["-m", "infrastructure.mcp_servers.iac_server"],
      "env": {
        "TERRAFORM_PATH": "${TERRAFORM_PATH}",
        "ANSIBLE_PATH": "${ANSIBLE_PATH}"
      }
    }
  }
}
